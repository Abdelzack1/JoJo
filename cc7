class Bus {
    int numero;
    Arret[] desserte;
    int nbArrets;

    public Bus(int numero) {
        this.numero = numero;
        this.desserte = new Arret[100];
        this.nbArrets = 0;
    }
}

class Arret {
    String nom;
    Bus[] lignes;
    int nbLignes;

    public Arret(String nom) {
        this.nom = nom;
        this.lignes = new Bus[100];
        this.nbLignes = 0;
    }
}

public class ReseauBus {

    public static void main(String[] args) {
        Bus bus393 = new Bus(393);
        Bus bus219 = new Bus(219);

        Arret sucyEnBrie = new Arret("Sucy-en-Brie-RER");
        Arret pompadour = new Arret("Pompadour");
        Arret choisyLeRoi = new Arret("Choisy-le-Roi");

        bus393.desserte[bus393.nbArrets++] = sucyEnBrie;
        bus393.desserte[bus393.nbArrets++] = pompadour;
        bus393.desserte[bus393.nbArrets++] = choisyLeRoi;

        bus219.desserte[bus219.nbArrets++] = pompadour;
        bus219.desserte[bus219.nbArrets++] = choisyLeRoi;

        sucyEnBrie.lignes[sucyEnBrie.nbLignes++] = bus393;

        pompadour.lignes[pompadour.nbLignes++] = bus393;
        pompadour.lignes[pompadour.nbLignes++] = bus219;

        choisyLeRoi.lignes[choisyLeRoi.nbLignes++] = bus393;
        choisyLeRoi.lignes[choisyLeRoi.nbLignes++] = bus219;

        boolean probleme = problemeDesserte(bus219, pompadour);
        System.out.println("Probl√®me de desserte : " + probleme);
    }

    public static boolean problemeDesserte(Bus bs, Arret ar) {
        for (int i = 0; i < ar.nbLignes; i++) {
            if (ar.lignes[i] == bs) {
                for (int j = 0; j < bs.nbArrets; j++) {
                    if (bs.desserte[j] == ar) {
                        return false;
                    }
                }
                return true;
            }
        }
        return false;
    }

    public static Arret[] arrets_communs(Bus b1, Bus b2) {
        Arret[] arretsCommuns = new Arret[100];
        int nbArretsCommuns = 0;

        for (int i = 0; i < b1.nbArrets; i++) {
            for (int j = 0; j < b2.nbArrets; j++) {
                if (b1.desserte[i] == b2.desserte[j]) {
                    arretsCommuns[nbArretsCommuns++] = b1.desserte[i];
                }
            }
        }
        Arret[] result = new Arret[nbArretsCommuns];
        System.arraycopy(arretsCommuns, 0, result, 0, nbArretsCommuns);
        return result;
    }
}
